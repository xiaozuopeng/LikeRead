<!--pages/ranking/rankingtwo.wxml-->
<view class="ranking-list" wx:for="{{rankingList}}" wx:for-item="rankingItem">
  <navigator url="../detail/bookdetail?bookId={{rankingItem._id}}" hover-clas="click-backgroud">
    <view class="ranking-item">
      <view class='left-content'>
        <image class='cover-img' src='{{rankingItem.cover}}' mode='scaleToFill'></image>
      </view>
      <view class='right-content'>
        <view>
          <text class='title'>{{rankingItem.title}}</text>
        </view>
        <view>
          <text class='author'>{{rankingItem.author}}</text>
        </view>
        <view>
          <text class='desc'>{{rankingItem.shortIntro}}</text>
        </view>
        <view class='data-num'>
          <text class='like'>{{rankingItem.latelyFollower}}</text>
          <text>人气</text>
          <text class='retentionRatio'>{{rankingItem.retentionRatio}}</text>
          <text class='percent'>%</text>
          <text>读者留存</text>
        </view>
      </view>
    </view>
  </navigator>
</view>