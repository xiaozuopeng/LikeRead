.page-body {
  height: 100%;
  position: absolute;
  z-index: 100;
}

.title {
  justify-content: center;
  text-align: center;
  align-self: center;
}

.content {
  margin-top: 10px;
}

.text-body {
  text-indent: 2em;
  /* -webkit-appearance: textarea; */
   /* -webkit-rtl-ordering: logical;
  flex-direction: column;
  resize: auto;
  cursor: text; 
  white-space: pre-wrap; */
  word-wrap: break-word;
}

.footer-btn {
  width: 100%;
  margin-top: 20px;
  margin-bottom: 40px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.pre-btn {
  flex: 1;
}

.catalogue-btn {
  flex: 1;
  margin-left: 20px;
  margin-right: 20px;
}

.next-btn {
  flex: 1;
}

.chapter-list {
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 200;
  background: white;
  /* opacity: 0.9; */
  overflow-y: auto;
}

.chapter-list_header {
  padding: 10px;
  border-bottom: 1px solid #e7e7e7;
  display: flex;
  justify-content: space-between;
}

.chapter-choose_text {
  font-size: 30rpx;
  padding-left: 4px;
  padding-right: 4px;
  border: 1px solid #e7e7e7;
  display: flex;
}

.weui-input {
  font-size: 30rpx;
  height: 28px;
  line-height: 28px;
  min-height: 28px;
}

.cover-img {
  height: 16px;
  width: 16px;
  margin-left: 2px;
  margin-top: 4px;
}

.chapter-item {
  padding: 10px;
  border-bottom: 1px solid #e7e7e7;
}

.chapter-list_footer {
  padding: 10px;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: white;
  /* opacity: 0.9; */
  justify-content: space-between;
  align-items: center;
}

.commodity-screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  /* overflow: hidden; */
  z-index: 140;
  color: #fff;
}

.action-box {
  width: 100%;
  /* overflow: hidden; */
  position: fixed;
  bottom: 0;
  z-index: 150;
  background: #fff;
  /* padding-left: 20px;
  padding-right: 20px; */
  display: flex;
  flex-direction: column;
}

.action-box_btn {
  margin: 10px;
  display: flex;
  flex-direction: row;
}

.space-view {
  margin-left: 20px;
  margin-right: 20px;
}
